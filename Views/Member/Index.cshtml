@model ShoppingWeb.Models.ViewModel.Login
@{
    ViewBag.Title = "Index";
    var msg = string.Empty;
    if (TempData["LoginResult"] != null)
    {
        msg = TempData["LoginResult"].ToString();
    }

}

<h2>Login:</h2>

@using (Html.BeginForm("Login", "Member", FormMethod.Post))
{
    <table>
        <tr>
            <td>帳號:</td>
            <td>@Html.TextBoxFor(x=> x.Account)</td>
        </tr>
        <tr>
            <td>密碼:</td>
            <td>@Html.TextBoxFor(x=> x.Password)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Submit" /></td> <br />
            <td><input type="button" value="註冊" onclick="openRegisterPage()"/>
        </tr>
    </table>
}
@section scripts{
    <script>
        var msg = '@msg';
        if (msg) {
            alert(msg);
        }

        function openRegisterPage() {
            window.location.href = getRootPath() + "/Member/Register";
        }
    </script>
}

